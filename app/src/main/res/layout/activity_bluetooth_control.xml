<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".bluetoothcontrol.BluetoothControlActivity">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:gravity = "center">

        <Button
            android:id="@+id/btnTurnOnBluetooth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Turn On Bl" />

        <Button
            android:id="@+id/btnTurnOfBluetooth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Turn Of Bl" />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:gravity = "center">

        <Button
            android:id="@+id/btnConnectBluetooth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Connect" />

        <Button
            android:id="@+id/btnDisconnectBluetooth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Disconnect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:gravity = "center">

        <Button
            android:id="@+id/btnSCOStartRecord"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Start Record" />

        <Button
            android:id="@+id/btnSCOStopRecord"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Stop Record" />

    </LinearLayout>

    <Button
        android:id="@+id/btnPlayAudio"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Play Audio" />





</LinearLayout>